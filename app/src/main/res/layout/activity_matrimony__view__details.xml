<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf7ea"

    tools:context=".Matrimony_View_Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileimage_drawer_matrimony_details"/>
    <TextView
        android:id="@+id/drawer_name_matrimony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_fathername_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_mothernamename_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_cellno_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_sex_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_age_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_height_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_education_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_job_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_income_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/drawer_siblings_matrimony_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        />
    </LinearLayout>
</ScrollView>